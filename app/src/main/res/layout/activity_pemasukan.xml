<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Pemasukan"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10pt"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:text="Tanggal:"
        android:textSize="8pt"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/pemasukan_ikon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="17dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_date"/>
        <EditText
            android:id="@+id/pemasukan_tgl"
            android:background="@drawable/custom_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="12dp"
            android:hint="TTTT-BB-HH"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:padding="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Nominal:"
        android:fontFamily="@font/poppins_medium"
        android:textSize="8pt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="8pt"/>

        <EditText
            android:id="@+id/pemasukan_nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="8pt" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Keterangan:"
        android:fontFamily="@font/poppins_medium"
        android:textSize="8pt"/>
    <EditText
        android:id="@+id/pemasukan_keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:fontFamily="@font/poppins_medium"
        android:inputType="textMultiLine"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/pemasukan_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_btnsimpan"
        android:layout_gravity="left"
        android:text="Simpan"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_btnkembali"
        android:fontFamily="@font/poppins_medium"
        android:onClick="toHome"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>

</LinearLayout>