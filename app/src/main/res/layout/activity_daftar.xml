<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mycashbook.LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/lg_mycash"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"/>



    <EditText
        android:id="@+id/daftar_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:hint="Masukkan Username"
        android:textSize="14dp"
        android:fontFamily="@font/poppins_medium"/>

    <EditText
        android:id="@+id/daftar_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Password"
        android:inputType="textPassword"
        android:background="@drawable/custom_input"
        android:padding="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <EditText
        android:id="@+id/daftar_ulangi_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ulangi Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textSize="14dp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/custom_input"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <Button
        android:id="@+id/daftar"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_btn"
        android:text="DAFTAR"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/daftar_kliklogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login disini!"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/poppins_medium"/>

</LinearLayout>
